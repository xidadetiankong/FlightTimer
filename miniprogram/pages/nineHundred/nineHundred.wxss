/* 容器层 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

/* 进度条模块 */
.progress-bar {
  margin-bottom: 40rpx;
}
.progress-track {
  height: 12rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
}
.progress-indicator {
  height: 100%;
  background: linear-gradient(90deg, #4dabf7, #339af0);
  transition: width 0.3s ease;
}
.progress-text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  color: #868e96;
  margin-top: 10rpx;
}

/* 学习卡片 */
.study-card {
  margin: 40rpx auto; /* 水平居中 */
  max-width: 90%; /* 控制卡片最大宽度 */
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 32rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.meta-item {
  text-align: center;
}
.meta-label {
  display: block;
  font-size: 24rpx;
  color: #adb5bd;
}
.meta-value {
  display: block;
  font-size: 40rpx;
  color: #495057;
  margin-top: 8rpx;
}

/* 难度等级色标 */
.level-6 { color: #dd38ec; }  /* 6级 */
.level-5 { color: #ec4d38; }  /* 5级 */
.level-4 { color: #ecbc38; }  /* 4级 */
.level-3 { color: #ece938; }  /* 3级 */
.level-2 { color: #3bff6c; }  /* 2级 */
.level-1 { color: #6babff; }  /* 1级 */

/* 学习内容 */
.card-body {
  padding: 24rpx 0;
}
.sentence-en {
  font-size: 44rpx !important;
  font-weight: 600;
  text-align: center;
  line-height: 1.6;
  color: #343a40;
  margin-bottom: 40rpx;
}
.sentence-cn {
  font-size: 36rpx !important;
  font-weight: 500;
  color:  #2c3e50;
  line-height: 1.5;
  margin-top: 40rpx;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 32rpx 0;
}
.divider-line {
  flex: 1;
  height: 1rpx;
  background: #dee2e6;
}
.divider-text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #adb5bd;
}

/* 操作按钮组 */
.action-bar {
  display: flex;
justify-content: space-evenly;
  position: fixed; /* 固定定位 */
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08); /* 顶部投影 */
}
.btn {
 width: fit-content;
  font-size:36rpx;
  margin: 8rpx;
  padding: 24rpx 32rpx !important;
  font-weight: bold !important;
  border-radius: 12rpx !important;
  transition: all 0.3s
}
.btn::after {
  border: none;
}
/* 增加按钮激活态交互 */
.btn:active {
  transform: scale(0.98); /* 点击缩放效果 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2) !important;
}
.prev, .next {
  background: #3498db !important;
  color: white !important;
  box-shadow: 0 4rpx 16rpx rgba(52,152,219,0.3);
}
.prev[disabled], .next[disabled] {
  opacity: 0.5;
}
.collect {
  text-align: center;
  width: 280rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: #dbdbdb !important;
  color: #2c3e50 !important;
  box-shadow: 0 4rpx 16rpx rgba(204, 204, 204, 0.3);
}
/* 收藏按钮状态反馈 */
.collect.active {
  background: #f1c40f !important; /* 收藏态颜色 */
  box-shadow: 0 4rpx 16rpx rgba(241,196,15,0.3);
}

/* 禁用按钮取消点击效果 */
.prev[disabled]:active, .next[disabled]:active {
  transform: none;
}
