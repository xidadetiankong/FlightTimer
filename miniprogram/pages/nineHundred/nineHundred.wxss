/* 容器层 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

/* 进度条模块 - 底部内部 */
.progress-bar-inside {
  width: 100%;
  margin: 0 0 20rpx 0;
  padding: 0;
}
.progress-track {
  height: 20rpx; /* 增加高度使其更容易点击 */
  background: #e9ecef;
  border-radius: 10rpx;
  overflow: visible;
  margin: 0 10rpx;
  position: relative;
  padding: 10rpx 0; /* 增加上下内边距使其更容易点击 */
  box-sizing: content-box;
}
.progress-indicator {
  height: 100%;
  background: linear-gradient(90deg, #4dabf7, #339af0);
  transition: width 0.2s ease;
  position: relative;
  border-radius: 10rpx;
}
.progress-handle {
  position: absolute;
  right: -18rpx;
  top: -8rpx;
  width: 36rpx;
  height: 36rpx;
  background: #ffffff;
  border: 3rpx solid #339af0;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
  z-index: 10;
  pointer-events: none;
}
.progress-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #495057;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}

/* 学习卡片 */
.study-card {
  margin: 40rpx auto; /* 水平居中 */
  max-width: 90%; /* 控制卡片最大宽度 */
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  padding: 32rpx;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}
.meta-item {
  text-align: center;
}
.meta-label {
  display: block;
  font-size: 24rpx;
  color: #adb5bd;
}
.meta-value {
  display: block;
  font-size: 40rpx;
  color: #495057;
  margin-top: 8rpx;
}

/* 难度等级色标 */
.level-6 { color: #dd38ec; }  /* 6级 */
.level-5 { color: #ec4d38; }  /* 5级 */
.level-4 { color: #ecbc38; }  /* 4级 */
.level-3 { color: #ece938; }  /* 3级 */
.level-2 { color: #3bff6c; }  /* 2级 */
.level-1 { color: #6babff; }  /* 1级 */

/* 学习内容 */
.card-body {
  padding: 24rpx 0;
}
.sentence-en {
  font-size: 44rpx !important;
  font-weight: 600;
  text-align: center;
  line-height: 1.6;
  color: #343a40;
  margin-bottom: 40rpx;
}
.sentence-cn {
  font-size: 36rpx !important;
  font-weight: 500;
  color:  #2c3e50;
  line-height: 1.5;
  margin-top: 40rpx;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 32rpx 0;
}
.divider-line {
  flex: 1;
  height: 1rpx;
  background: #dee2e6;
}
.divider-text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #adb5bd;
}

/* 操作按钮组 */
.action-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed; /* 固定定位 */
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08); /* 顶部投影 */
  z-index: 100; /* 确保按钮在进度条上方 */
}

/* 按钮行 */
.button-row {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  margin-top: 10rpx;
}
.btn {
 width: fit-content;
  font-size:36rpx;
  margin: 8rpx;
  padding: 24rpx 32rpx !important;
  font-weight: bold !important;
  border-radius: 12rpx !important;
  transition: all 0.3s
}
.btn::after {
  border: none;
}
/* 增加按钮激活态交互 */
.btn:active {
  transform: scale(0.98); /* 点击缩放效果 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2) !important;
}
.prev, .next {
  background: #3498db !important;
  color: white !important;
  box-shadow: 0 4rpx 16rpx rgba(52,152,219,0.3);
}
.prev[disabled], .next[disabled] {
  opacity: 0.5;
}
.collect {
  text-align: center;
  width: 280rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: #dbdbdb !important;
  color: #2c3e50 !important;
  box-shadow: 0 4rpx 16rpx rgba(204, 204, 204, 0.3);
}
/* 收藏按钮状态反馈 */
.collect.active {
  background: #f1c40f !important; /* 收藏态颜色 */
  box-shadow: 0 4rpx 16rpx rgba(241,196,15,0.3);
}

/* 禁用按钮取消点击效果 */
.prev[disabled]:active, .next[disabled]:active {
  transform: none;
}

/* 新增功能按钮组样式 - 顶部 */
.function-bar-top {
  width: 100%;
  padding: 0;
  margin-bottom: 10rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.function-bar-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 16rpx 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  margin: 0 0 10rpx 0;
}

.jump-input {
  width: 100rpx;
  height: 70rpx;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 4rpx;
  padding: 0 10rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0 10rpx 0 0;
  flex: 1;
}

.func-btn {
  font-size: 28rpx;
  padding: 0 !important;
  font-weight: normal !important;
  border-radius: 4rpx !important;
  transition: all 0.3s;
  margin: 0 10rpx;
  background: #e9ecef !important;
  color: #495057 !important;
  flex: 2;
  height: 70rpx;
  line-height: 70rpx;
  border: none !important;
}

.jump-btn {
  background: #3498db !important;
  color: white !important;
  box-shadow: 0 2rpx 8rpx rgba(52,152,219,0.2);
}

.favorites-btn {
  background: #f5f5f5 !important;
  color: #333333 !important;
  border: 1rpx solid #e0e0e0 !important;
}

.favorites-btn.active {
  background: #f1c40f !important;
  color: #2c3e50 !important;
  box-shadow: 0 2rpx 8rpx rgba(241,196,15,0.2);
}

.func-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2) !important;
}
