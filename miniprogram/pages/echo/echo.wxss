/* 添加宾休按钮样式 */
.addBinxiuBtn {
  width: 90%;
  height: 80rpx;
  background: #2A465C;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx auto 30rpx auto;
}

.addBinxiuBtn_h {
  transform: scale(0.98, 0.98);
  background: #1d3245;
}

/* 宾休悬浮窗样式 */
.restTimeModal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.restTimeContent {
  width: 85%;
  background: #6D869A;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
}

.restTimeTitle {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.restTimeButtons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.restTimeBtn {
  width: 40%;
  height: 80rpx;
  background: #2A465C;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid white;
}

/* 记录按钮样式 */
.recordTips {
  color: #ff5050;
  font-size: 26rpx;
  margin-top: 20rpx;
  text-align: center;
}

.record_buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  width: 100%;
}

.recordBtn {
  width: 35%;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 32rpx;
}

.recordBtn.cancel {
  background: #eeeeee;
  color: #666666;
}

.recordBtn.record {
  background: #e74c3c;
  color: white;
}

.recordBtn_h {
  transform: scale(0.98, 0.98);
  opacity: 0.9;
}

/* 记录悬浮窗样式 */
.recordModal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recordContent {
  width: 85%;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.recordTitle {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.recordForm {
  display: flex;
  flex-direction: column;
  max-height: 60vh;
  overflow-y: auto;
}

.recordItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.recordLabel {
  width: 30%;
  font-size: 28rpx;
  color: #666;
}

.recordValue {
  width: 65%;
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.recordInput {
  width: 65%;
  text-align: right;
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
}

.recordButtons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.recordButtons .recordBtn {
  width: 45%;
  height: 80rpx;
  background: #2A465C;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recordButtons .recordBtn:first-child {
  background: #f5f5f5;
  color: #666;
}