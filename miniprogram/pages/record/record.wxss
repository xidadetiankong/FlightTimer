.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgb(243, 243, 243);

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width:100%;
  height:80rpx;
  background:#6D869A;
  z-index: 100;

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: aliceblue;
  font-size: 30rpx;

}
.title{
  position: fixed;
  top:80rpx;
  left: 0;
  right: 0;
